Host *.amazonaws.com *.cloudmqtt.com *.cloudamqp.com *.elephantsql.com *.cloudkafka.com
  User ubuntu
  PreferredAuthentications publickey

Host *.srvs.cloudkafka.com
  IdentityFile ~/.ssh/cloudkafka_rsa

Host *.rmq.cloudamqp.com
  IdentityFile ~/.ssh/cloudamqp_rsa

Host *.db.elephantsql.com
  IdentityFile ~/.ssh/elephantsql_rsa

Host *.cloudmqtt.com
  IdentityFile ~/.ssh/cloudmqtt_rsa

Host github.com heroku.com
  ControlMaster auto
  ControlPath ~/.ssh/%r@%h:%p
  ControlPersist 60m
  ServerAliveInterval 20
  LogLevel INFO

Host *
  LogLevel DEBUG
  Protocol 2
  TCPKeepAlive yes
  Compression yes
  ServerAliveInterval 60
  Ciphers chacha20-poly1305@openssh.com,aes128-gcm@openssh.com,aes256-gcm@openssh.com,aes256-ctr,aes192-ctr,aes128-ctr
  HostKeyAlgorithms ssh-ed25519-cert-v01@openssh.com,ssh-rsa-cert-v01@openssh.com,ssh-ed25519,ssh-rsa
  AddKeysToAgent yes
